#include <stdio.h>
#include<string.h>

int main()
{
  int n,i,j,k,l,m,d;
  scanf("%d",&n);
  for (i=0;i<n;i++)
  {   k=n;
  d=n;
      for(j=0;j<i;j++)
      {
          printf("%d",k);

            k=k-1;
      }
      for(l=2*k-2;l>=0;l--)
      {printf("%d",k);

      }
      k=k+1;
      for(m=0;m<i;m++)
      {

          printf("%d",k);
            k++;
      }

printf("\n");

  }


  for (i=n-1;i>0;i--)
  {   k=n;
      for(j=i;j>0;j--)
      {
          printf("%d",k);

            k=k-1;
      }
     for(l=0;l<=2*k-2;l++)
      {printf("%d",k+1);


      }
      k=k+1;
      for(m=i;m>0;m--)
      {

          printf("%d",k);
            k++;
      }

printf("\n");

  }
